<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.m06.Joystick.JoystickFragment">

    <TextView
        android:id="@+id/textX"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="112dp"
        android:textColor="#009688"
        app:layout_constraintBottom_toTopOf="@+id/buttonSync"
        app:layout_constraintEnd_toStartOf="@+id/textY"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textY"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="212dp"
        android:textColor="#009688"
        app:layout_constraintBottom_toTopOf="@+id/buttonMove"
        app:layout_constraintEnd_toStartOf="@+id/textZ"
        app:layout_constraintStart_toEndOf="@+id/textX"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textZ"
        android:layout_width="68dp"
        android:layout_height="27dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="412dp"
        android:textColor="#009688"
        app:layout_constraintBottom_toTopOf="@+id/buttonStop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textY"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMove"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="266dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textY" />

    <Button
        android:id="@+id/buttonSync"
        android:layout_width="92dp"
        android:layout_height="101dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="466dp"
        android:text="SYNC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonMove"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textX" />

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="90dp"
        android:layout_height="97dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="166dp"
        android:text="STOP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonMove"
        app:layout_constraintTop_toBottomOf="@+id/textZ" />

</androidx.constraintlayout.widget.ConstraintLayout>